@model School_ADO.Models.Entity.Teacher

@{
    ViewBag.Title = "Delete Teacher";
}

<div class="container">
    <header>
        <h1>Delete Teacher</h1>
    </header>
    <main>
        <p>Are you sure you want to delete this teacher?</p>
        <dl class="dl-horizontal">
            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>
            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>
            <dt>Subject:</dt>
            <dd>@Model.Subject</dd>
        </dl>
        @using (Html.BeginForm("DeleteConfirmed", "Teachers", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.TeacherID)
            <button type="submit" class="btn delete-btn">Delete</button>
            <a href="@Url.Action("Index", "Teachers")" class="btn cancel-btn">Cancel</a>
        }
    </main>
</div>