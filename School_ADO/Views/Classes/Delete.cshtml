@model School_ADO.Models.Entity.Class
@{
    ViewBag.Title = "Delete Class";
}

<div class="container">
    <header>
        <h1>Delete Class</h1>
    </header>
    <main>
        <p>Are you sure you want to delete this class?</p>
        <dl class="dl-horizontal">
            <dt>Class Name:</dt>
            <dd>@Model.ClassName</dd>
            <dt>Teacher ID:</dt>
            <dd>@Model.TeacherID</dd>
            <dt>Student ID:</dt>
            <dd>@Model.StudentID</dd>
        </dl>
        @using (Html.BeginForm("DeleteConfirmed", "Classes", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.ClassID)
            <button type="submit" class="btn delete-btn">Delete</button>
            <a href="@Url.Action("Index", "Classes")" class="btn cancel-btn">Cancel</a>
        }
    </main>
</div>