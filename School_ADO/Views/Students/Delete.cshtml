@model School_ADO.Models.Entity.Student
 

@{
    ViewBag.Title = "Delete Student";
}

<div class="container">
    <header>
        <h1>Delete Student</h1>
    </header>
    <main>
        <p>Are you sure you want to delete this student?</p>
        <dl class="dl-horizontal">
            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>
            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>
            <dt>Date of Birth:</dt>
            <dd>@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
            <dt>Grade:</dt>
            <dd>@Model.Grade</dd>
        </dl>
        @using (Html.BeginForm("DeleteConfirmed", "Students", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.StudentID)
            <button type="submit" class="btn delete-btn">Delete</button>
            <a href="@Url.Action("Index", "Students")" class="btn cancel-btn">Cancel</a>
        }
    </main>
</div>
